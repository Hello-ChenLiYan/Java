<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sc.dao.UserDao">

    <resultMap type="com.sc.entity.User" id="UserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="account" column="account" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="pickName" column="pickName" jdbcType="VARCHAR"/>
        <result property="age" column="age" jdbcType="INTEGER"/>
        <result property="sex" column="sex" jdbcType="INTEGER"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="regDate" column="reg_date" jdbcType="TIMESTAMP"/>
        <result property="lastLoginDate" column="last_login_date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select
          id, account, password, pickName, age, sex, phone, email, address, reg_date, last_login_date
        from flower.user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
        id, account, password, pickName, age, sex, phone, email, address, reg_date, last_login_date
        from flower.user
        <where>
            <if test="bean.id != null">
                and id = #{bean.id}
            </if>
            <if test="bean.account != null and bean.account != ''">
                and account = #{bean.account}
            </if>
            <if test="bean.password != null and bean.password != ''">
                and password = #{bean.password}
            </if>
            <if test="bean.pickName != null and bean.pickName != ''">
                and pickName = #{bean.pickName}
            </if>
            <if test="bean.age != null">
                and age = #{bean.age}
            </if>
            <if test="bean.sex != null">
                and sex = #{bean.sex}
            </if>
            <if test="bean.phone != null and bean.phone != ''">
                and phone = #{bean.phone}
            </if>
            <if test="bean.email != null and bean.email != ''">
                and email = #{bean.email}
            </if>
            <if test="bean.address != null and bean.address != ''">
                and address = #{bean.address}
            </if>
            <if test="bean.regDate != null">
                and reg_date = #{bean.regDate}
            </if>
            <if test="bean.lastLoginDate != null">
                and last_login_date = #{bean.lastLoginDate}
            </if>
        </where>
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserMap">
        select
        id, account, password, pickName, age, sex, phone, email, address, reg_date, last_login_date
        from flower.user
        <where>
            <if test="bean.id != null">
                and id = #{bean.id}
            </if>
            <if test="bean.account != null and bean.account != ''">
                and account like concat('%', #{bean.account},'%')
            </if>
            <if test="bean.password != null and bean.password != ''">
                and password = #{bean.password}
            </if>
            <if test="bean.pickName != null and bean.pickName != ''">
                and pickName like concat('%',#{bean.pickName},'%')
            </if>
            <if test="bean.age != null">
                and age = #{bean.age}
            </if>
            <if test="bean.sex != null">
                and sex like concat('%', #{bean.sex},'%')
            </if>
            <if test="bean.phone != null and bean.phone != ''">
                and phone = #{bean.phone}
            </if>
            <if test="bean.email != null and bean.email != ''">
                and email like concat('%', #{bean.email},'%')
            </if>
            <if test="bean.address != null and bean.address != ''">
                and address like concat('%', #{bean.address},'%')
            </if>
            <if test="bean.regDate != null">
                and reg_date = #{bean.regDate}
            </if>
            <if test="bean.lastLoginDate != null">
                and last_login_date = #{bean.lastLoginDate}
            </if>
        </where>
    </select>

</mapper>