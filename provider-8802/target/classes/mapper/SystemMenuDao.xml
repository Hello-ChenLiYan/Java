<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.dao.SystemMenuDao">

    <resultMap type="cn.entity.SystemMenu" id="SystemMenuMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="pid" column="pid" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="icon" column="icon" jdbcType="VARCHAR"/>
        <result property="href" column="href" jdbcType="VARCHAR"/>
        <result property="target" column="target" jdbcType="VARCHAR"/>
        <result property="sort" column="sort" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
        <result property="createAt" column="create_at" jdbcType="TIMESTAMP"/>
        <result property="updateAt" column="update_at" jdbcType="TIMESTAMP"/>
        <result property="deleteAt" column="delete_at" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SystemMenuMap">
        select
          id, pid, title, icon, href, target, sort, status, remark, create_at, update_at, delete_at
        from florist.system_menu
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SystemMenuMap">
        select
        id, pid, title, icon, href, target, sort, status, remark, create_at, update_at, delete_at
        from florist.system_menu
        order by sort desc
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SystemMenuMap">
        select
        id, pid, title, icon, href, target, sort, status, remark, create_at, update_at, delete_at
        from florist.system_menu
        <where>
            <if test="bean.id != null">
                and id = #{bean.id}
            </if>
            <if test="bean.pid != null">
                and pid = #{bean.pid}
            </if>
            <if test="bean.title != null and bean.title != ''">
                and title like concat('%',#{bean.title},'%')
            </if>
            <if test="bean.icon != null and bean.icon != ''">
                and icon = #{bean.icon}
            </if>
            <if test="bean.href != null and bean.href != ''">
                and href = #{bean.href}
            </if>
            <if test="bean.target != null and bean.target != ''">
                and target = #{bean.target}
            </if>
            <if test="bean.sort != null">
                and sort = #{bean.sort}
            </if>
            <if test="bean.status != null">
                and status = 1
            </if>
            <if test="bean.remark != null and bean.remark != ''">
                and remark = #{bean.remark}
            </if>
            <if test="bean.createAt != null">
                and create_at = #{bean.createAt}
            </if>
            <if test="bean.updateAt != null">
                and update_at = #{bean.updateAt}
            </if>
            <if test="bean.deleteAt != null">
                and delete_at = #{bean.deleteAt}
            </if>
        </where>
        order by sort desc
    </select>

    <delete id="delete">
        delete from florist.system_menu where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

</mapper>