<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sc.dao.AdminDao">

    <resultMap type="com.sc.entity.Admin" id="AdminMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="regDate" column="reg_date" jdbcType="TIMESTAMP"/>
        <result property="lastLoginDate" column="last_login_date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="AdminMap">
        select
          id, username, password, phone, reg_date, last_login_date
        from florist.admin
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="AdminMap">
        select
          id, username, password, phone, reg_date, last_login_date
        from florist.admin
        limit #{offset}, #{limit}
    </select>

  <!--  &lt;!&ndash;通过实体作为筛选条件查询&ndash;&gt;-->
    <select id="queryAll" resultMap="AdminMap">
        select
          id, username, password, phone, reg_date, last_login_date
        from florist.admin
        <where>
            <if test="bean.id != null">
                and id = #{bean.id}
            </if>
            <if test="bean.username != null and bean.username != ''">
                and username like concat('%',#{bean.username},'%')
            </if>
            <if test="bean.password != null and bean.password != ''">
                and password = #{bean.password}
            </if>
            <if test="bean.phone != null and bean.phone != ''">
                and phone = #{bean.phone}
            </if>
            <if test="bean.startTime != null and bean.startTime != ''">
                and reg_date &gt;= #{bean.startTime}
            </if>
            <if test="bean.endTime != null and bean.endTime != ''">
                and reg_date &lt;= #{bean.endTime}
            </if>
            <if test="bean.lastLoginDate != null">
                and last_login_date = #{bean.lastLoginDate}
            </if>
        </where>
    </select>


    <delete id="delete">
        delete from florist.admin where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>


    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into florist.admin(username,password,phone,reg_date)
        values (#{username},#{password},#{phone},#{regDate})
    </insert>

    <update id="update" parameterType="com.sc.entity.Admin">
        update florist.admin
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
        </set>
        where id = #{id}
    </update>


</mapper>