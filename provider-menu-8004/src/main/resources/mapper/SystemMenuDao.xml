<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sc.dao.SystemMenuDao">

    <resultMap type="com.sc.entity.SystemMenu" id="SystemMenuMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="baseSql">
        id, pid, title, icon, href, target, sort, status, remark, create_at, update_at, delete_at
    </sql>

    <!--查询单个-->
    <select id="queryById" resultMap="SystemMenuMap">
        select
        <include refid="baseSql"></include>
        from student.system_menu
        where id = #{id}
    </select>

</mapper>