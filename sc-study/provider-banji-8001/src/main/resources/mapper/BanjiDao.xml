<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sc.dao.BanjiDao">

    <resultMap type="com.sc.entity.Banji" id="BanjiMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="db" column="db" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BanjiMap">
        select
          id, name, db
        from db001.banji
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BanjiMap">
        select
          id, name, db
        from db001.banji
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BanjiMap">
        select
          id, name, db
        from db001.banji
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="db != null and db != ''">
                and db = #{db}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into db001.banji(name, db)
        values (#{name}, #{db})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update db001.banji
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="db != null and db != ''">
                db = #{db},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from db001.banji where id = #{id}
    </delete>

</mapper>