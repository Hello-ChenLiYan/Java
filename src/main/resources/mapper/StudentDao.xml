<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.first.dao.StudentDao">

    <resultMap type="com.first.entity.Student" id="StudentMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="code" column="code" jdbcType="VARCHAR"/>
        <result property="className" column="class_name" jdbcType="VARCHAR"/>
        <result property="classId" column="class_id" jdbcType="INTEGER"/>
        <result property="mobile" column="mobile" jdbcType="VARCHAR"/>
        <result property="gender" column="gender" jdbcType="INTEGER"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="StudentMap">
        select
          id, name, code, class_name, class_id, mobile, gender, remark
        from boot.student
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="StudentMap">
        select
          id, name, code, class_name, class_id, mobile, gender, remark
        from boot.student
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="StudentMap">
        select
          id, name, code, class_name, class_id, mobile, gender, remark
        from boot.student
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="code != null and code != ''">
                and code = #{code}
            </if>
            <if test="className != null and className != ''">
                and class_name = #{className}
            </if>
            <if test="classId != null">
                and class_id = #{classId}
            </if>
            <if test="mobile != null and mobile != ''">
                and mobile = #{mobile}
            </if>
            <if test="gender != null">
                and gender = #{gender}
            </if>
            <if test="remark != null and remark != ''">
                and remark = #{remark}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into boot.student(name, code, class_name, class_id, mobile, gender, remark)
        values (#{name}, #{code}, #{className}, #{classId}, #{mobile}, #{gender}, #{remark})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into boot.student(name, code, class_name, class_id, mobile, gender, remark)
        values
        <foreach collection="list" separator="," item="item">
            (#{item.name}, #{item.code}, #{item.className}, #{item.classId}, #{item.mobile}, #{item.gender}, #{item.remark})
        </foreach>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update boot.student
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="code != null and code != ''">
                code = #{code},
            </if>
            <if test="className != null and className != ''">
                class_name = #{className},
            </if>
            <if test="classId != null">
                class_id = #{classId},
            </if>
            <if test="mobile != null and mobile != ''">
                mobile = #{mobile},
            </if>
            <if test="gender != null">
                gender = #{gender},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from boot.student where id = #{id}
    </delete>

</mapper>